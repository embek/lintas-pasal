<div class="container-fluid px-0">
    <div class="row justify-content-center align-items-center min-vh-100 mx-0">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="glass-card text-center text-white p-5">
                <div class="error-icon mb-4">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
                </div>
                
                <h1 class="display-4 fw-bold mb-3">Error <%= error.status || 500 %></h1>
                <p class="lead mb-4">
                    <% if (error.status === 404) { %>
                        Halaman yang Anda cari tidak ditemukan
                    <% } else { %>
                        <%= error.message || 'Terjadi kesalahan pada server' %>
                    <% } %>
                </p>
                
                <div class="row g-3 justify-content-center">
                    <div class="col-auto">
                        <a href="/" class="btn btn-gradient btn-lg">
                            <i class="fas fa-home me-2"></i>Kembali ke Beranda
                        </a>
                    </div>
                    <div class="col-auto">
                        <button onclick="history.back()" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Halaman Sebelumnya
                        </button>
                    </div>
                </div>
                
                <% if (process.env.NODE_ENV === 'development') { %>
                <details class="mt-4 p-3 bg-dark rounded text-start">
                    <summary class="text-warning cursor-pointer">Debug Info (Development Mode)</summary>
                    <pre class="text-light mt-2 small"><%= error.stack %></pre>
                </details>
                <% } %>
            </div>
        </div>
    </div>
</div>
